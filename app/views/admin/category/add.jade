extends ../layout

block content
    h2.page-header 添加分类
    
    if errors && errors.length
        div.errors
            each error in errors
                p.alert.alert-danger= error.msg
    form.vertical-form(method="post",action= action)
        div.form-group
            label(for="title") 名称
            input.form-control.input-lg(name="name",placeholder="请输入标题..." ,required="true",value=category ? category.name : "")
        
        button.btn.btn-info(type="submit")= category ? "保存修改" : "保存"